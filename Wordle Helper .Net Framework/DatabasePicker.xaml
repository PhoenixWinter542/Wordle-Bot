<Window x:Class="Wordle_Helper.DatabasePicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wordle_Helper.Net_Framework"
        mc:Ignorable="d"
        Title="Database Picker" Height="200" Width="600"
		x:Name="Picker">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="3*"/>
			<RowDefinition Height="10*"/>
			<RowDefinition Height="10*"/>
			<RowDefinition Height="10*"/>
			<RowDefinition Height="25*"/>
		</Grid.RowDefinitions>
		
		<TextBox x:Name="connectionEntry" Text="Connection String" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Width="500" Height="20"/>
		<TextBox x:Name="tableEntry" Text="Table Name" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Width="500" Height="20"/>
		<TextBox x:Name="columnEntry" Text="Column Name" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Width="500" Height="20"/>
		<Button Content="Connect" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="50" Click="Button_Click"/>
    </Grid>
</Window>
